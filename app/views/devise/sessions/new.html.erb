<%= stylesheet_link_tag 'signup', :media => 'all' %>

<div class="login-page">
  <div class="form">
  <div class="form-h1">
    <h1>ログイン</h1>
  </div> 
  <%= form_for(resource, as: resource_name, id: 'loginForm', class: 'login-form', url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, id: 'email',autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, id: 'password', autocomplete: "new-password" %>
      </div>

      <%= f.submit "ログイン", class: "form-submit" %>
      <p class="message">アカウントをお持ちでない方<%= render "devise/shared/links" %></p>


    <% end %>

  </div>
</div>